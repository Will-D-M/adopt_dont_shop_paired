<h3>Name: <%= @shelter.name %></h3>
<h3>Address: <%= @shelter.address %></h3>
<h3>City: <%= @shelter.city %></h3>
<h3>State: <%= @shelter.state %></h3>
<h3>Zip: <%= @shelter.zip %></h3>
<h3><a href="/shelters/<%= @shelter.id %>/edit">Update Shelter</h3>
<%=link_to "Delete Shelter", "/shelters/#{@shelter.id}", :method => :delete%>
<p><%= link_to "Pets", "/shelters/#{@shelter.id}/pets" %></p>


<%= link_to 'Add Review', "/shelters/#{@shelter.id}/reviews/new" %>
<% @shelter.reviews.each do |review| %>
<section id="review<%= review.id %>"
  <h4><%= review.title %></h4>
  <h4><%= review.rating %> / 5 </h4>
  <p><%= review.content %></p>
  <p><%= link_to "Edit this review!", "/shelters/#{review.id}/reviews/edit" %></p>
  <p><%= link_to "Delete this review!", "/reviews/#{review.id}", method: :delete %></p>
  <%= image_tag(review.picture) %>
</section>
<% end %>
