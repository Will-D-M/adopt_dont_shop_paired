<h2>Fill out this form to update a shelter review!</h2>
<%= form_tag "/shelters/#{params[:id]}" do %>
    <%= label_tag :title %>
    <%= text_field_tag :title, @review.title%><br>
    <%= label_tag :rating %>
    <%= text_field_tag :rating, @review.rating %><br>
    <%= label_tag :content %>
    <%= text_field_tag :content, @review.content %><br>
    <%= label_tag :picture %>
    <%= text_field_tag :picture, @review.picture %><br>

    <br>
    <%= submit_tag 'Submit' %>
<% end %>
